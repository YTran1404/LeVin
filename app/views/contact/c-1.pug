		.row
			.col-md-6
				form.contact__form.row
					.col-sm-6.form-group
						.form-input
							input.form-control(type="text" name="Fullname" placeholder="Tên")
					.col-sm-6.form-group
						.form-input
							input.form-control(type="text" name="Phone" placeholder="Số điện thoại")
					.col-12.form-group
						.form-input
							input.form-control(type="text" name="Email" placeholder="Email")
					.col-12.form-group
						.form-input
							textarea.form-control(placeholder="Lời nhắn")
